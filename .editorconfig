root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.kt]
max_line_length = 120
indent_style = space
indent_size = 4
ktlint_standard_package-name = disabled
ktlint_standard_filename = disabled

[*Test.kt]
max_line_length = 200

[*.{md,yml,yaml}]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 4
